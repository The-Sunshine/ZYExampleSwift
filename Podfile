# Uncomment the next line to define a global platform for your project
 platform :ios, '13.0'

target 'ZYExampleSwift' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for ZYExampleSwift
  pod 'Alamofire'   # 网络
  pod 'Moya'        # 对Alamofire封装
  pod 'RxSwift'     # 响应式编程
  pod 'SwiftyJSON'  # 解析
  pod 'Kingfisher'  # 图片加载
  pod 'SnapKit'     # 自动布局
  pod 'PromiseKit'  # 异步开发
  pod 'R.swift'     # 资源加载
  pod 'Then'        # 初始化库 语法糖
  pod 'Reusable'    # 协议+泛型
  pod 'Toast-Swift' # toast
  pod 'SCLAlertView'# 弹框
  pod 'JXSegmentedView'         # SegmentedView
  pod 'BetterSegmentedControl'  # SegmentedControl
  pod 'SwiftyUserDefaults'      # NSUserDefaults的封装扩展
  pod 'PhoneNumberKit'          # 解析、验证和处理不同格式电话号码的框架
  pod 'IQKeyboardManagerSwift'  # 监听键盘
  pod 'EmptyDataSet-Swift'      # 空白页
  pod 'LLCycleScrollView'       # 轮播图
  pod 'SnapKitExtend'           # SnapKit的扩展
#  pod 'RAMAnimatedTabBarController' # TabBarController动画
#  pod 'ESTabBarController-swift'# 高度自定义的TabBarController组件

  # SwiftLint 强制检查 Swift 代码风格和规定的工具
  # 30DaysofSwift
  #  pod 'Quick'       # 单元测试框架 需要XCTest

  
  # OC
#  pod 'UINavigation-SXFixSpace'
  
  
  
  
#  https://github.com/DarielChen/iOSTips swift learn

end
